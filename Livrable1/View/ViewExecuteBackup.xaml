<Window x:Class="Livrable1.View.ViewExecuteBackup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Livrable1.View"
        mc:Ignorable="d"
        Title="ViewExecuteBackup" Height="450" Width="800">
    
    <Grid>
        
        <Grid Margin="0,0,0,346">
            <Label x:Name="LabelMainViewTitle" Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Franklin Gothic Demi" FontSize="36"/>
        </Grid>
        
        <Button x:Name="ButtonLeave" Content="Leave" HorizontalAlignment="Left" Margin="716,370,0,0" VerticalAlignment="Top" Click="ButtonLeave_Click_1"/>
        <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="74,145,0,0" VerticalAlignment="Top" Click="ButtonLeave_Click_1" Background="#FFBD0000" Foreground="White" Width="46"/>
        <Button x:Name="ButtonValidate" Content="Validate" HorizontalAlignment="Left" Margin="74,120,0,0" VerticalAlignment="Top" Click="ButtonLeave_Click_1" Background="#FF0FB700" Foreground="White"/>
        
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="151,114,151,50"/>
        
        <Label x:Name="LabelTitleExecuteBackup" Content="Add a new backup job" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
    
</Window>