<Window x:Class="Livrable1.View.ViewExecuteBackup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exécuter une sauvegarde" Height="450" Width="800">

    <Grid>
        <Label Content="EasySave" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>

        <DataGrid x:Name="DataGridBackups"
                  ItemsSource="{Binding Backups}"
                  AutoGenerateColumns="False"
                  Margin="50,80,50,120">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding NameSave}" Width="*"/>
                <DataGridTextColumn Header="Source" Binding="{Binding CheminSource}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding CheminDestination}" Width="*"/>
                <DataGridTemplateColumn Header="Progression" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding Progression}" Minimum="0" Maximum="100" Height="20"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Click="PauseBackup_Click" Margin="2">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="16" Height="16">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M6,4 H10 V20 H6 Z M14,4 H18 V20 H14 Z" Fill="Black"/>
                                            </Canvas>
                                        </Viewbox>
                                    </StackPanel>
                                </Button>

                                <Button Click="ResumeBackup_Click" Margin="2">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="16" Height="16">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M8,5 L19,12 L8,19 Z" Fill="Black"/>
                                            </Canvas>
                                        </Viewbox>
                                    </StackPanel>
                                </Button>

                                <Button Click="StopBackup_Click" Margin="2">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="16" Height="16">
                                            <Canvas Width="24" Height="24">
                                                <Rectangle Width="16" Height="16" Fill="Black"/>
                                            </Canvas>
                                        </Viewbox>
                                    </StackPanel>
                                </Button>

                                <Button Click="DeleteBackup_Click" Margin="2">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Width="16" Height="16">
                                            <Canvas Width="24" Height="24">
                                                <Path Data="M6,6 L18,18 M18,6 L6,18" Stroke="Black" StrokeThickness="2"/>
                                            </Canvas>
                                        </Viewbox>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <ComboBox x:Name="BackupTypeSelector" HorizontalAlignment="Left" Margin="50,350,0,0" VerticalAlignment="Top" Width="200">
            <ComboBoxItem Content="Sauvegarde complète"/>
            <ComboBoxItem Content="Sauvegarde différentielle"/>
        </ComboBox>

        <Button Content="Exécuter" HorizontalAlignment="Left" Margin="280,350,0,0" VerticalAlignment="Top" Click="ButtonExecute_Click" Height="20" />
        <Button x:Name="ButtonLeave" Content="Leave" HorizontalAlignment="Left" Margin="342,350,0,0" VerticalAlignment="Top" Click="ButtonLeave_Click_1" Height="20"/>
    </Grid>
</Window>