<Window x:Class="Livrable1.View.ViewRecoverBackup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Livrable1.View"
        mc:Ignorable="d"
        Title="EasySave - Recover Backup" Height="450" Width="800" ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <!-- Definition of rows and columns for the grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Main title -->
        <Label x:Name="LabelMainViewTitle" Content="EasySave" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="36" FontWeight="Bold" 
               Foreground="{StaticResource PrimaryBrush}" 
               Grid.Row="0" Grid.ColumnSpan="2" Margin="0,20"/>

        <!-- Subtitle -->
        <Label x:Name="LabelMainViewRecoverBackup" Content="Recover backup jobs" 
               HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18"
               Grid.Row="0" Margin="50,70,0,0" Grid.Column="1" Grid.RowSpan="2"
               Foreground="{StaticResource TextBrush}"/>

        <!-- Selection of backups -->
        <Label x:Name="LabelMainSelectRecoverBackup" Content="Select backup jobs to recover"
               HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18"
               Grid.Row="1" Grid.Column="0" Margin="50,20,0,0" Grid.ColumnSpan="2"
               Foreground="{StaticResource TextBrush}"/>

        <!-- List of backups to recover -->
        <StackPanel x:Name="BackupCheckboxesPanel" 
                    Grid.Row="1" Grid.Column="0" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="70,60,0,10">
            <ItemsControl ItemsSource="{Binding FilesToRecover}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding FileName}" IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                  Style="{StaticResource {x:Type CheckBox}}" Margin="0,5,0,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Choice of backup type -->
        <Label x:Name="LabelMainBackupType" Content="Choose the backup type"
               HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="18"
               Grid.Row="1" Grid.Column="1" Margin="0,20,50,0"
               Foreground="{StaticResource TextBrush}"/>

        <!-- Backup type (Full or Differential) -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="270,50,50,0" VerticalAlignment="Top">
            <RadioButton x:Name="FullBackupCheckBox" Content="Full Backup" 
                          Style="{StaticResource {x:Type RadioButton}}" Margin="0,5,0,5"/>
            <RadioButton x:Name="DifferentialBackupCheckBox" Content="Differential Backup" 
                          Style="{StaticResource {x:Type RadioButton}}" Margin="0,5,0,5"/>
        </StackPanel>

        <Label x:Name="LabelProgress" Content="0%" 
       HorizontalAlignment="Left" VerticalAlignment="Bottom" 
       Grid.Row="1" Grid.Column="1" Margin="118,0,0,54" 
       Foreground="{StaticResource TextBrush}"/>

        <ProgressBar x:Name="ProgressBarRecovery" 
             Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" 
             Height="20" Margin="70,0,337,34" 
             Minimum="0" Maximum="100" Value="0"
             Foreground="{StaticResource PrimaryBrush}"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="ButtonCancel" Content="Cancel" Width="100" Height="30" 
                    Margin="10,0" Click="ButtonCancel_Click"
                    Style="{StaticResource {x:Type Button}}" Background="{StaticResource AccentBrush}"/>
            <Button x:Name="ButtonValidate" Content="Validate" Width="100" Height="30" 
                    Margin="10,0" Click="ButtonValidate_Click"
                    Style="{StaticResource {x:Type Button}}" Background="{StaticResource PrimaryBrush}"/>
            <Button x:Name="ButtonLeave" Content="Exit" Width="100" Height="30" 
                    Margin="10,0" Click="ButtonLeave_Click"
                    Style="{StaticResource {x:Type Button}}"/>
        </StackPanel>
    </Grid>
</Window>