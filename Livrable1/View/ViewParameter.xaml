<Window x:Class="Livrable1.View.ViewParameter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Livrable1.View"
        mc:Ignorable="d"
        Title="EasySave - Parameters" Height="450" Width="800"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <!-- Titre principal -->
        <Label x:Name="LabelMainViewTitle" Content="EasySave" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="36" FontWeight="Bold" 
               Foreground="{StaticResource PrimaryBrush}" 
               Margin="0,20,0,0"/>

        <!-- Section Langue -->
        <StackPanel Margin="50,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockLanguage" Text="Choose Language" 
                       FontWeight="Bold" Margin="0,0,0,10" 
                       Foreground="{StaticResource TextBrush}"/>
            <RadioButton x:Name="RadioButtonFrench" Content="Français" 
                         Margin="0,5,0,5" Checked="RadioButton_Language_Checked"
                         Style="{StaticResource {x:Type RadioButton}}"/>
            <RadioButton x:Name="RadioButtonEnglish" Content="English" 
                         Margin="0,5,0,5" Checked="RadioButton_Language_Checked"
                         Style="{StaticResource {x:Type RadioButton}}"/>
        </StackPanel>

        <!-- Section Logiciels métier -->
        <StackPanel Margin="50,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockSoftware" Text="Business Software" 
                       FontWeight="Bold" Margin="0,0,0,10" 
                       Foreground="{StaticResource TextBrush}"/>
            <CheckBox x:Name="CheckBoxCalculator" Content="Calculator" 
                      Margin="0,5,0,5" Checked="CheckBox_Checked_Calculator" Unchecked="CheckBox_Unchecked_Calculator"
                      Style="{StaticResource {x:Type CheckBox}}"/>
            <CheckBox x:Name="CheckBoxNotepad" Content="Notepad" 
                      Margin="0,5,0,5" Checked="CheckBox_Checked_Notepad" Unchecked="CheckBox_Unchecked_Notepad"
                      Style="{StaticResource {x:Type CheckBox}}"/>
        </StackPanel>

        <!-- Section Extensions -->
        <StackPanel Margin="50,300,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockExtensions" Text="Extensions to encrypt" 
                       FontWeight="Bold" Margin="0,0,0,10" 
                       Foreground="{StaticResource TextBrush}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,50,0">
                    <CheckBox x:Name="CheckBoxPDF" Content="PDF" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_PDF" Unchecked="CheckBox_Unchecked_PDF"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                    <CheckBox x:Name="CheckBoxPNG" Content="PNG" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_PNG" Unchecked="CheckBox_Unchecked_PNG"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                    <CheckBox x:Name="CheckBoxTXT" Content="TXT" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_TXT" Unchecked="CheckBox_Unchecked_TXT"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <CheckBox x:Name="CheckBoxJSON" Content="JSON" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_JSON" Unchecked="CheckBox_Unchecked_JSON"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                    <CheckBox x:Name="CheckBoxXML" Content="XML" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_XML" Unchecked="CheckBox_Unchecked_XML"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                    <CheckBox x:Name="CheckBoxDOCX" Content="DOCX" 
                              Margin="0,5,0,5" Checked="CheckBox_Checked_DOCX" Unchecked="CheckBox_Unchecked_DOCX"
                              Style="{StaticResource {x:Type CheckBox}}"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Section Format des logs -->
        <StackPanel Margin="400,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlockLogFormat" Text="Log Format" 
                       FontWeight="Bold" Margin="0,0,0,10" 
                       Foreground="{StaticResource TextBrush}"/>
            <RadioButton Content="JSON" 
                         Margin="0,5,0,5" Checked="RadioButton_LogFormat_Checked" 
                         x:Name="RadioButtonLogJSON"
                         Style="{StaticResource {x:Type RadioButton}}"/>
            <RadioButton Content="XML" 
                         Margin="0,5,0,5" Checked="RadioButton_LogFormat_Checked" 
                         x:Name="RadioButtonLogXML"
                         Style="{StaticResource {x:Type RadioButton}}"/>
        </StackPanel>

        <!-- Bouton Quitter -->
        <Button x:Name="ButtonLeave" Content="Exit" 
                HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" 
                Click="ButtonLeave_Click_1"
                Style="{StaticResource {x:Type Button}}" Width="100"/>
    </Grid>
</Window>